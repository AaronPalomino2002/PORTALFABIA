@model PORTALFABIA.Models.RegistroFab
    
    <section class="bg-banner">
        <div class="row justify-content-center">
            <div class="col-6 col-sm-8 ms-5">
                <h1 class="">Haz realidad tus ideas! en 3d</h1>
                <br>
                <p>Diseña e innova tus pensamientos</p>
                <div class="row" >
                        <div class="col-6">
                            <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#miModal"> Inscribete </button>

                        </div>
                        <div class="col-6">
                            <button class="btn btn-success">
                                Mas Información
                            </button>
                        </div>
                 
                </div>
            </div>
        </div>
        
    </section>
<!-- Modal -->
<div class="modal fade" id="miModal" tabindex="-1" aria-labelledby="modalTitulo" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitulo">Inscribete a nuestro Taller!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <!-- Formulario dentro del modal -->
               <form asp-controller="Fablab" asp-action="Index" method="post">
                <div class="mb-3">
                    <label asp-for="Apellidos" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="Apellidos" required>
                </div>
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="Nombre" required>
                </div>
                <div class="mb-3">
                    <label asp-for="Correo" class="form-label"></label>
                    <input type="email" class="form-control" asp-for="Correo" required>
                </div>
                <div class="mb-3">
                    <label asp-for="Edad" class="form-label"></label>
                    <input type="number" class="form-control" asp-for="Edad" required>
                </div>
                <div class="mb-3">
                    <label asp-for="Distrito" class="form-label"></label>
                    <select class="form-control" asp-for="Distrito" required>
                        <option value="">Seleccione su Colegio de Distrito</option>
                        <option value="Lima">Lima</option>
                        <option value="La Molina">La Molina</option>
                        <option value="Ate">Ate</option>
                        <option value="Santa Anita">Santa Anita</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="Semana" class="form-label"></label>
                    <select class="form-control" asp-for="Semana" required>
                        <option value=""></option>
                        <option value="Lunes-Sabados">Lunes - Sábados</option>
                        <option value="Martes-Jueves">Martes - Jueves</option>
                        <option value="Miercoles-Viernes">Miércoles - Viernes</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="Horario" class="form-label"></label>
                    <select class="form-control" asp-for="Horario" required>
                        <option value=""></option>
                        <option value="9-10am">9:00 - 10:30 am</option>
                        <option value="5-6:30pm">5:00 - 6:30 pm</option>
                        <option value="6:30-8:00pm">6:30 pm - 8:00 pm</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Enviar</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </form>


            </div>
        </div>
    </div>
</div>
