@model PORTALFABIA.Models.RegistroRobotica

<section class="bg-banner text-center text-white d-flex align-items-center justify-content-center vh-100" style="background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images/banner.jpg') no-repeat center center/cover;">
    <div>
        <h1 class="display-3 fw-bold">Bienvenido a nuestro Taller de Robótica</h1>
        <p class="lead">Convierte tus ideas en realidad con innovación y tecnología 3D</p>
        <a href="#contenido" class="btn btn-outline-light btn-lg mt-3">Explora más</a>
    </div>
</section>

<section id="contenido" class="container py-5 text-center" style="background-color: #f8f9fa;">
    <h2 class="mb-4">Diseña e innova con nosotros</h2>
    <p class="text-muted">Aprende a construir, diseñar e innovar con nuestros talleres especializados.</p>
</section>

<section id="cursos" class="container py-5" style="background-color: #e9ecef;">
    <h2 class="text-center mb-4">Nuestros Cursos</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card p-3">
                <img src="/images/curso1.jpg" class="img-fluid rounded mb-3" style="width: 100%; height: 200px; object-fit: cover;" alt="Curso 1">
                <h4>Introducción a la Robótica</h4>
                <p>Fundamentos de robótica y programación.</p>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#miModal">Inscribirse</button>
                <button class="btn btn-secondary" onclick="alert('Información detallada del curso')">Más info</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3">
                <img src="/images/curso2.jpg" class="img-fluid rounded mb-3" style="width: 100%; height: 200px; object-fit: cover;" alt="Curso 2">
                <h4>Diseño e Impresión 3D</h4>
                <p>Explora el mundo del diseño y la fabricación digital.</p>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#miModal">Inscribirse</button>
                <button class="btn btn-secondary" onclick="alert('Información detallada del curso')">Más info</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3">
                <img src="/images/curso3.jpg" class="img-fluid rounded mb-3" style="width: 100%; height: 200px; object-fit: cover;" alt="Curso 3">
                <h4>Automatización y Control</h4>
                <p>Domina la automatización con Arduino y sensores.</p>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#miModal">Inscribirse</button>
                <button class="btn btn-secondary" onclick="alert('Información detallada del curso')">Más info</button>
            </div>
        </div>
    </div>
</section>

<section id="proyectos" class="container py-5" style="background-color: #dee2e6;">
    <h2 class="text-center mb-4">Nuestros Proyectos</h2>
    <div id="carouselProyectos" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/proyecto1.jpg" class="d-block w-100" alt="Proyecto 1">
                <div class="carousel-caption d-none d-md-block">
                    <h4>Robot Asistente</h4>
                    <p>Un robot programado para asistencia en el hogar.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/proyecto2.jpg" class="d-block w-100" alt="Proyecto 2">
                <div class="carousel-caption d-none d-md-block">
                    <h4>Brazo Robótico</h4>
                    <p>Desarrollo de un brazo mecánico automatizado.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselProyectos" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselProyectos" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>
</section>

<section id="contacto" class="container py-5 text-center" style="background-color: #adb5bd;">
    <h2 class="mb-4">Contáctanos</h2>
    <p>Email: info@robotica.com | Teléfono: +51 987 654 321</p>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#miModal">Inscribirse</button>
</section>

<!-- Modal de Inscripción -->
<div class="modal fade" id="miModal" tabindex="-1" aria-labelledby="modalTitulo" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitulo">Inscríbete a nuestro Taller!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Robotica" asp-action="Registrar" method="post">
                    <div class="mb-3">
                        <label asp-for="Apellidos" class="form-label">Apellidos</label>
                        <input type="text" class="form-control" asp-for="Apellidos" required>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" asp-for="Nombre" required>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Enviar</button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
